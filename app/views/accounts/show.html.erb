<%# <h1>Accounts#show</h1>
<p>Find me in app/views/accounts/show.html.erb</p> %>

<div class="card col-sm-10 mx-auto mt-5">
  <div class="card-header bg-white">
    <h2>アカウント情報</h2>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-sm-8">
        <table class="table">
          <tbody>

              <%# <td>名前:</td> %>
              <%# <td><%= current_user.profile.name %></td>
              <%# <td><%= link_to "編集", edit_account_name_path %></td>

              <td>Name:</td>
              <td><%= current_user.name %></td>
              <td><%= link_to "編集", edit_user_registration_path, :class => "btn btn-primary"%></td>

            <tr>
              <td>Eメール:</td>
              <td><%= current_user.email %></td>
            </tr>
            <tr>
              <td>パスワード:</td>
              <td>(非表示)</td>
            </tr>
            <%# <tr>
              <td>自己紹介:</td>
              <td><%= current_user.profile.description %></td>
              <%# <td><%= link_to "編集", edit_user_registration_path, :class => "btn btn-primary"%></td>
            <%# </tr> %>
          </tbody>
        </table>
      </div>

      <div class="col-sm-4">
        <!-- アバターファイルの表示 -->
        <div class="account-profile-image d-flex flex-column">
          <%= image_tag current_user.profile.avatar.to_s, 
              :class => "float-center border mb-2 mt-2 mx-auto" %>
          <%= link_to "アバターを変更", edit_account_avatar_path, :class => "btn btn-primary" %><br>
      </div>
    </div>
  </div>
</div>