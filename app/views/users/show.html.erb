<div class="contents row">
  <div class="container mt-4">
    <p><%= @name %>さんの投稿一覧</p>

    <% @posts.each do |post| %>
      タイトル：<%= post.title %><p></p>
      <%= simple_format(post.detail) %>
      <%= audio_tag post.file, controls: true %><p>
      <% if user_signed_in? && current_user.id == post.user_id %>
        <%= link_to '編集', "/posts/#{post.id}/edit", method: :get, class: 'btn btn-outline-secondary' %>
        <%= link_to '削除', "/posts/#{post.id}", method: :delete, data:{ confirm: '本当に削除しますか？' }, class: 'btn btn-outline-secondary' %>
      <% end %>
      <hr>
    <% end %>
    <%= paginate(@posts) %>
  </div>
</div>